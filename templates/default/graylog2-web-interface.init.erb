#! /bin/sh

# Installed by Chef => graylog2::web-interface.rb

### BEGIN INIT INFO
# Provides:          <%= node[:graylog2][:web_service_name] %>
# Required-Start:    $all
# Required-Stop:     $all
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: starts the <%= node[:graylog2][:web_service_name] %>
# Description:       starts the <%= node[:graylog2][:web_service_name] %> using the <%= node[:graylog2][:web_service_name] %> control script
### END INIT INFO

APP=<%= node[:graylog2][:web_service_name] %>
APP_PATH=<%= node[:graylog2][:web_home] %>
NOHUP=`which nohup`
GRAYLOG2_PID=/var/run/<%= node[:graylog2][:web_service_name] %>

test -x /usr/bin/java || exit 0

set -e

start() {
  echo "Starting $APP ..."
  su - <%= node[:graylog2][:web_user] %> -c "cd $APP_PATH/bin ; $NOHUP ./$APP -mem <%= node[:graylog2][:web_mem] %> -Dpidfile.path=$GRAYLOG2_PID &"
}

stop() {
  if [ -f $GRAYLOG2_PID ];
  then
    PID=`cat ${GRAYLOG2_PID}`
    echo "Stopping $APP ($PID) ..."
    kill $PID
  fi
}

restart() {
    stop
    sleep 2
    start
}

status() {
  PID=`cat ${GRAYLOG2_PID}`
  if [ ! -z $PID ]; then
    if pid_running $PID; then
      echo "$APP running as pid $PID"
      return 0
    else
      echo "Stale pid file with $PID - removing..."
      rm ${GRAYLOG2_PID}
    fi
  fi

  echo "$APP not running"
}

pid_running() {
  kill -0 $1 2> /dev/null
}


case "$1" in
  start)
    start
  ;;
  stop)
    stop
  ;;
  status)
    status
  ;;
  restart)
    restart
  ;;
  *)
    N=/etc/init.d/$APP
    echo "Usage: $N {start|stop|restart|status}" >&2
    exit 1
  ;;
esac

exit 0
